<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/llItemVideo"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/item_video.llItemVideo_padding"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvTitelVideo"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:text="@string/textview.text.demo_title"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/imgVideoView"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/item_video.videoViewYoutube.margin_top"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.v7.widget.CardView>
